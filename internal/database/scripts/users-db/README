CREATE EXTENSION IF NOT EXISTS pg_trgm;



-- ==========================================================
-- (opcional): Confirmar que no existan dependencias
-- ==========================================================

SELECT *
FROM pg_shdepend d
JOIN pg_roles r ON d.refobjid = r.oid
WHERE r.rolname = 'gorm_writer';